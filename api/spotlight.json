{
    "swagger": "2.0",
    "info": {
        "title": "DBpedia Spotligh API",
        "description": "DBpedia Spotligh is a tool for automatically annotating mentions of DBpedia resources in text, providing a solution for linking unstructured information sources to the Linked Open Data cloud through DBpedia",
        "version": "1.0.0"
    },
    "host": "api.dbpedia-spotlight.org",
    "schemes": [
        "http"
    ],
    "basePath": "/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/annotate": {
            "post": {
                "summary": "Returns annotated text / entities from an URL",
                "description": "A 4(four) step process -  Spotting, Candidate Mapping, Disambiguation and Linking / Stats -  for linking unstructured information sources  \n",
                "parameters": [
                    {
                        "name": "url",
                        "in": "query",
                        "description": "URL to be annotated.",
                        "required": true,
                        "type": "string",
                        "format": "url"
                    }
                ],
                "tags": [
                    "Annotate"
                ],
                "responses": {
                    "200": {
                        "description": "An annotated text"
                    }
                }
            }
        },
        "/candidate": {
            "get": {
                "summary": "Returns candidates from an URL",
                "description": "A 4(four) step process -  Spotting, Candidate Mapping, Disambiguation and Linking / Stats -  for linking unstructured information sources  \n",
                "parameters": [
                    {
                        "name": "url",
                        "in": "query",
                        "description": "URL to be annotated.",
                        "required": true,
                        "type": "string",
                        "format": "url"
                    }
                ],
                "tags": [
                    "Annotate"
                ],
                "responses": {
                    "200": {
                        "description": "An annotated text"
                    }
                }
            }
        },
        "/spot": {
            "get": {
                "summary": "Returns candidates from an URL",
                "description": "A 4(four) step process -  Spotting, Candidate Mapping, Disambiguation and Linking / Stats -  for linking unstructured information sources  \n",
                "parameters": [
                    {
                        "name": "url",
                        "in": "query",
                        "description": "URL to be annotated.",
                        "required": true,
                        "type": "string",
                        "format": "url"
                    }
                ],
                "tags": [
                    "Annotate"
                ],
                "responses": {
                    "200": {
                        "description": "An annotated text"
                    }
                }
            }
        }
    }
}
